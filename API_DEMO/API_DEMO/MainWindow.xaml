        <TextBlock Name="TextBoxFullName" Text="ФИО" HorizontalAlignment="Left" Margin="177,37,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="42" Width="213" FontFamily="Book Antiqua"/>
        <TextBlock Name="TextBoxResult" Text="Результат" HorizontalAlignment="Left" Margin="177,93,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="41" Width="213" FontFamily="Book Antiqua"/>

    </Grid>
